#ifndef JITCOMPILER_H_
#define JITCOMPILER_H_
#include <sstream>

namespace vm {
	namespace compiler {

		class JITCompiler {
		public:
			JITCompiler();
			virtual ~JITCompiler();
			/**
			 * Traduce il byte code in codice eseguibile
			 */
			std::string translate(std::stringstream out, int pos = 100);
		};

	} /* namespace compiler */
} /* namespace vm */

#endif /* JITCOMPILER_H_ */
