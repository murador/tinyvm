#ifndef VMINSTANCE_H_
#define VMINSTANCE_H_
#include "JITCompiler.h"
using namespace vm::compiler;

namespace vm {

namespace runtime {

	class VMInstance {
	private:
		unsigned long high_mem;
		unsigned long low_mem;
		unsigned long size_of_memory;
		unsigned long num_of_thread;
		JITCompiler jc;
	public:
		VMInstance();
		virtual ~VMInstance();
	};

 } /* namespace runtime */
} /* namespace vm */

#endif /* VMINSTANCE_H_ */
